<h1>Listing gyms</h1>
<p>
  Sort by:
  <%= sort_link @search, :nummembers %> |
  <%= sort_link @search, :name %> |
  <%= sort_link @search, :totalBench, "Total Bench", :default_order => :desc %>
</p>
<table>
  <tr>
	<th>Avatar</th>
    <th>Name</th>
    <th>Address</th>
    <th>Nummembers</th>
    <th>Total Bench</th>
    <th></th>
    <th></th>
  </tr>

<% @gyms.each do |gym| %>
  <tr>
	<td><%= image_tag gym.gymphoto.url(:small) %></td>
    <td><%= gym.name %></td>
    <td><%= gym.address %></td>
    <td><%= gym.numMembers %></td>
    <td><%= gym.totalBench %></td>
    <td><%= link_to 'Show', gym %></td>
    <td><%= link_to 'Edit', edit_gym_path(gym) %></td>
    <td><%= link_to 'Destroy', gym, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Gym', new_gym_path %>

<p>
  Sort by:
  <%= sort_link @search, :maxBench %> |
  <%= sort_link @search, :maxSquat %> |
  <%= sort_link @search, :username %>
</p>
<table>
  <tr>
    <th>Username</th>
    <th>Email</th>
    <th>Max Bench</th>
    <th>Max Squat</th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.email %></td>
	<td><%= user.maxBench %></td>
	<td><%= user.maxSquat %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
